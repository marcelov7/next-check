generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum ParadaStatus {
  em_andamento
  concluida
  cancelada
}

enum ParadaTipo {
  preventiva
  corretiva
  emergencial
}

enum TesteStatus {
  pendente
  ok
  problema
  nao_aplica
}

model Area {
  id        Int           @id @default(autoincrement())
  nome      String
  descricao String?
  ativo     Boolean       @default(true)
  equipamentos Equipamento[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model Equipamento {
  id          Int        @id @default(autoincrement())
  nome        String
  tag         String     @unique
  descricao   String?
  ativo       Boolean    @default(true)
  area        Area       @relation(fields: [areaId], references: [id])
  areaId      Int
  testes      Teste[]
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Parada {
  id                    Int          @id @default(autoincrement())
  macro                 String?
  nome                  String
  descricao             String?
  equipeResponsavel     String?
  dataInicio            DateTime?
  dataFim               DateTime?
  duracaoPrevistaHoras  Int?
  status                ParadaStatus @default(em_andamento)
  tipo                  ParadaTipo
  testes                Teste[]
  createdAt             DateTime     @default(now())
  updatedAt             DateTime     @updatedAt
}

model Teste {
  id                 Int         @id @default(autoincrement())
  parada             Parada      @relation(fields: [paradaId], references: [id])
  paradaId           Int
  equipamento        Equipamento @relation(fields: [equipamentoId], references: [id])
  equipamentoId      Int
  status             TesteStatus @default(pendente)
  observacoes        String?
  problemaDescricao  String?
  dataTeste          DateTime?
  testadoPor         String?
  naoAplica          Boolean     @default(false)
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
}

model User {
  id          Int       @id @default(autoincrement())
  name        String
  email       String    @unique
  password    String
  username    String?   @unique
  role        String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  emailVerified DateTime?
  image String?
  accounts Account[]
  sessions Session[]
}

model Account {
  id                 Int       @id @default(autoincrement())
  userId             Int
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?   @db.Text
  access_token       String?   @db.Text
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?   @db.Text
  session_state      String?
  oauth_token_secret String?
  oauth_token        String?
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           Int      @id @default(autoincrement())
  sessionToken String   @unique
  userId       Int
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String @unique
  expires    DateTime

  @@id([identifier, token])
}
